<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:controller="ui.RoleSelectionController" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
  <AnchorPane VBox.vgrow="ALWAYS">
    <Label graphicTextGap="8.0" layoutX="212.0" layoutY="87.0" text="Choose Account">
      <font>
        <Font name="System Bold" size="29.0"/>
      </font>
    </Label>
    <Button fx:id="studentButton" layoutX="278.0" layoutY="146.0" mnemonicParsing="false" onAction="#openStudentLogin"
            prefHeight="25.0" prefWidth="87.0" text="Student"/>
    <Button fx:id="lecturerButton" layoutX="277.0" layoutY="192.0" mnemonicParsing="false"
            onAction="#openLecturerLogin" prefHeight="25.0" prefWidth="87.0" text="Lecturer"/>
    <Button fx:id="managerButton" layoutX="277.0" layoutY="239.0" mnemonicParsing="false" onAction="#openManagerLogin"
            prefHeight="25.0" prefWidth="87.0" text="Manager"/>
  </AnchorPane>
</VBox>
